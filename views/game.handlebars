


{{#each games}}
<div class="card" style="width: 18rem;">
  {{!-- <img src="..." class="card-img-top" alt="..."> --}}
  <div class="card-body">
    <h5 class="card-title">{{game_name}}</h5>
    <p class="card-text">{{game_description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Comments: {{comments.length}} </li>
    <li class="list-group-item">Votes:</li>
  </ul>
  <div class="card-body">
    <a href="/game/{{id}}" class="card-link">See More Information</a>
  </div>
</div>
{{/each}}


