<div class="container">
    <div class="main-body">
      
      <div class="row gutters-sm">
        
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="/images/avatar.png" alt="Profile Pic" width="150">
                  <div class="mt-3">
                    <h2>{{user.username}}</h2>
                    <form id='profile-pic-form' action="/" method="POST" encType="multipart/form-data">
                    <h6>Upload Profile Picture</h6>
                    <input type='file' name='profilePic' accept="image/*" id='profile-pic'/>
                    <input type="submit" class='bnt'>
                    </form>
                  </div>
              </div>
            </div>
          </div>
        <div class="card mt-3">
          <h3>Users You Are Following</h3>
            {{#each user.followings}}
            <p></p>
            {{/each}}
          </div>
      </div>

      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
                  <h3>Upvoted Games</h3>
              </div>
            </div>
              <hr>
              <div class="row">
                <div class="col-sm-12">
                  {{#each user.ranks}}
                  <p>{{game.game_name}}</p>
                  {{/each}}
                </div>
              </div>
          </div>
        </div>
            
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row gutters-sm">
                <h3>Your Comments</h3>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-12">
                 {{#each user.comments}}
                <p>{{game.game_name}}: <q>{{comment_text}}</q></p>
                
                {{/each}}
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>

  {{#if loggedIn}}
      <script src="/javascript/profile.js" defer></script>
    {{/if}}         
          
        
        
     



